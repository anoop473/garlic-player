<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<smil>
	<head>
		<meta name="title" content="Testing media in body" />
        <meta http-equiv="Refresh" content="30" />
		<layout>
			<root-layout id="display:0" width="1920" height="1080" />
			<region regionName="screen1" top="0" left="0" width="960" height="540" z-index="1" backgroundColor="#f00" />
			<region regionName="screen2" top="0" left="960" width="960" height="540" z-index="1" backgroundColor="#0f0" />
			<region regionName="screen3" top="540" left="0" width="960" height="540" z-index="1" backgroundColor="#00f" />
			<region regionName="screen4" top="540" left="960" width="960" height="540" z-index="1" backgroundColor="#0ff" />
		</layout>
	</head>
	<body>

	<!--

	sequences
	up left begin 1, 2 3 end => wait until parent will repeated
		up right begin, 1, 2, begin, 1,2,3, end wait, begin, 1, begin 1, 2, 3, end
		down left begin, 1, 2, 3, end, 1s blank screen, begin, 1, 2, 3, end, begin, 1, 2, 3, end

	repeated indefinite

	-->

		<par xml:id="par_global" repeatCount="indefinite" begin="0s" endsync="last">
			<par xml:id="par1" begin="0s" endsync="last">
				<seq xml:id="seq1" begin="0s;2s;3s;10s" restart="never">
					<img region="screen1" xml:id="imgAbegin" src="../../images/begin.jpg" dur="1s"  fit="meet" />
					<img region="screen1" xml:id="imgA0001" src="../../images/0001.jpg" dur="1s" fit="meet" />
					<img region="screen1" xml:id="imgA0002" src="../../images/0002.jpg" dur="1s" fit="meet" />
					<img region="screen1" xml:id="imgA0003" src="../../images/0003.jpg" dur="1s" fit="meet" />
					<img region="screen1" xml:id="imgAend" src="../../images/end.jpg" dur="1s"  fit="meet" />
				</seq>
			</par>
			<par xml:id="par2" begin="0s" endsync="last">
				<seq xml:id="seq2" begin="0s;2s;10s;12s" restart="always">
					<img region="screen2" xml:id="imgBbegin" src="../../images/begin.jpg" dur="1s"  fit="meet" />
					<img region="screen2" xml:id="imgB0001" src="../../images/0001.jpg" dur="1s" fit="meet" />
					<img region="screen2" xml:id="imgB0002" src="../../images/0002.jpg" dur="1s" fit="meet" />
					<img region="screen2" xml:id="imgB0003" src="../../images/0003.jpg" dur="1s" fit="meet" />
					<img region="screen2" xml:id="imgBend" src="../../images/end.jpg" dur="1s"  fit="meet" />
				</seq>
			</par>
			<par xml:id="par3" begin="0s" endsync="last">
				<seq xml:id="seq3" begin="0s;4s;6s;11.1s" restart="whenNotActive">
					<img region="screen3" xml:id="imgCbegin" src="../../images/begin.jpg" dur="1s"  fit="meet" />
					<img region="screen3" xml:id="imgC0001" src="../../images/0001.jpg" dur="1s" fit="meet" />
					<img region="screen3" xml:id="imgC0002" src="../../images/0002.jpg" dur="1s" fit="meet" />
					<img region="screen3" xml:id="imgC0003" src="../../images/0003.jpg" dur="1s" fit="meet" />
					<img region="screen3" xml:id="imgCend" src="../../images/end.jpg" dur="1s"  fit="meet" />
				</seq>
			</par>
		</par>
	</body>
</smil>
